<Window x:Class="TaskRecorder.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:uc="clr-namespace:TaskRecorder"
        Title="Task Recorder" Height="400" Width="600" WindowStyle="SingleBorderWindow" DataContext="{Binding RelativeSource={RelativeSource Self}}" Icon="/TaskRecorder;component/Icons/hourglass.ico">

    <TabControl Margin="5" SelectionChanged="TabControl_SelectionChanged">
        <TabItem Header="Day">
            <uc:DayView />
        </TabItem>
        <TabItem Header="Week">
            <uc:WeekView />
        </TabItem>
    </TabControl>
</Window>
